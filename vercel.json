{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node" 
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 3008,
      "maxDuration": 10 
    }
  },
  "static": {
    "directoryListing": false 
  }
}
